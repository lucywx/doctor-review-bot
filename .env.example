# Twilio WhatsApp API 配置
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_WHATSAPP_NUMBER=+1234567890
VERIFY_TOKEN=your_custom_verify_token_here

# 数据库配置
DATABASE_URL=sqlite:///./doctor_review.db

# Google Places API (Optional - for Google Maps reviews, max 5 reviews per doctor)
# Free tier: $200/month = ~40,000 searches
# Get your API key from: https://console.cloud.google.com/apis/credentials
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Facebook Graph API (Not used - kept for backward compatibility)
FACEBOOK_ACCESS_TOKEN=not_required

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo

# Google Custom Search API (用于医生评价搜索)
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# 应用配置
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# 缓存配置
CACHE_DEFAULT_TTL_DAYS=7
CACHE_HOT_DOCTOR_TTL_DAYS=7
CACHE_COLD_DOCTOR_TTL_DAYS=3

# 限流配置
RATE_LIMIT_PER_USER_DAILY=50
RATE_LIMIT_PER_MINUTE=10

# 日志配置
LOG_LEVEL=INFO
